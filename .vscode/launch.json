{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "React: Chrome",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000", // Change if your React app runs on a different port
            "webRoot": "${workspaceFolder}/src", // Adjust to your project's structure
            "sourceMaps": true
        }
    ]
}